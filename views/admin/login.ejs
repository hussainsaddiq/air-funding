<% let emailError = '', passwordError = ''
   if(errors.length > 0) {
                errors.forEach((error) => {
                    console.log(error)
                    if(error.param === 'email') {
                        emailError = error.msg;
                    }
                    if(error.param === 'password') {
                        passwordError = error.msg;
                    }
                })
            }
%> 
<!DOCTYPE html>
<html lang="en">
<%- include('../components/head.ejs')  %> 
<body">
    
        <div class="flex h-screen flex-wrap">
            <div class="hidden sm:block sm:w-3/12 h-screen">
               <img src="../assets/images/admin-image.jpg" class="w-full h-full object-cover" alt="">
            </div>
            <div class="w-full sm:w-9/12 flex h-screen items-center p-8">
               
               <form action="/loginUser?adminOption=true" method="post" class="w-full sm:w-8/12 md:w-6/12 lg:w-5/12">
                <h1 class="mb-3 capitalize text-base font-medium">admin login</h1>
                 <div class="mb-5">
                    <input type="email" name="email" class="<%= emailError ? 'input border-rose-600 border bg-rose-50' : 'input' %>" placeholder="Your email">
                    <span class="error"><%= emailError; %></span>
                 </div>
                 <div class="mb-5">
                    <input type="password" name="password" class="<%= passwordError ? 'input border-rose-600 border bg-rose-50' : 'input' %>" placeholder="Your password">
                    <span class="error"><%= passwordError; %></span>
                 </div>
                 <input type="submit" value="sign in" class="btn btn-default w-full">
               </form>
            </div>
            </div>
            
            
        
    </div>
    <script src="../assets/js/app.js"></script>
</body>
</html>