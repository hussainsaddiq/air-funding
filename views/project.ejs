<!DOCTYPE html>
<html lang="en">
<%- include('components/head.ejs')  %> 
<body>
    <%- include('components/nav.ejs')  %> 
    <%- include('components/hero.ejs') %> 
    <div class="max-w-screen-lg mx-auto my-10 px-5">
        <h1 class="heading">details</h1>
        <div class="flex flex-wrap -mx-5">
         <div class="w-full md:w-6/12 p-5">
          <div class="w-full h-[300px]">
            <img src="<%= `/assets/images/${project.image}`  %> " alt="" class="w-full h-full object-contain rounded">
          </div>
          <p class="mt-3 text-base font-medium"><%= project.description  %> </p>
         </div>
         <div class="w-full md:w-6/12 p-5">
            <h1 class="text-3xl"><%= project.title  %> </h1>
            <h3 class="my-3 font-medium capitalize text-indigo-700"><%= project.category  %> </h3>
            <div class="flex justify-between mb-3">
                <h3 class="capitalize font-medium text-gray-600">target</h3>
                <h3 class="text-indigo-900 font-medium">PKR <%= project.amount  %>.00 </h3>
            </div>
            <form action="/create-checkout-session" class="flex flex-col" method="post">
                <input type="text" name="amount" class="border mb-3 p-3 rounded outline-none" placeholder="Enter amount..." />
                <input type="hidden" name="title" value="<%= project.title  %> " />
                <input type="hidden" name="id" value="<%= project._id  %> " />
                <input type="submit" class="inline-block px-6 py-2.5 rounded bg-indigo-600 text-white capitalize font-semibold" value="donation now" />
            </form>
            
         </div>
        </div>
    </div>
    <script src="./assets/js/app.js"></script>
</body>
</html>