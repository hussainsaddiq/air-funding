<% let emailError = '', passwordError = ''
   if(errors.length > 0) {
                errors.forEach((error) => {
                    console.log(error)
                    if(error.param === 'email') {
                        emailError = error.msg;
                    }
                    if(error.param === 'password') {
                        passwordError = error.msg;
                    }
                })
            }
%> 
<div class="max-w-screen-lg mx-auto mt-10 px-5">
    <div class="flex">
        <div class="w-full md:w-6/12">
            <form action="/loginUser" method="POST" class="form bg-white p-8 rounded-md">
                <div class="mb-5">
                    <h1 class="heading">log in</h1>
                    <p class="mt-3 text-sm">By continuing, you agree to our User Agreement and Privacy Policy.</p>
                </div>
                <div class="mb-5">
                    <input type="email" name="email" class="input" placeholder="Email..." value="<%= fields.email ? fields.email  : '' %>">
                    <span class="error"><%= emailError; %></span>
                </div>
                <div class="mb-5">
                    <input type="password" name="password" class="input" placeholder="Create password..." value="<%= fields.password ? fields.password  : '' %>">
                    <span class="error"><%= passwordError; %></span>
                </div>
                <div class="mb-5">
                    <input type="submit" value="sign in &rarr;" class="btn btn-default">
                </div>
            </form>
        </div>
    </div>
</div>
